{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-labels": ["error", { "allowLoop": true, "allowSwitch": true }],
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "prefer-object-spread": "error"
  }
}
